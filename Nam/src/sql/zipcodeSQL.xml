<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC '-//ibatis.apache.org//DTD Sql Map 2.0//EN'
	'http://ibatis.apache.org/dtd/sql-map-2.dtd'>
	
<sqlMap>
	<typeAlias alias="zipcode" type="zipcode.ZipcodeVO" />
	
	<!-- 리절트 맵 정의 -->
	<resultMap id="zipcodeRes" class="zipcode" >
		<result property="zipcode" column="ZIPCODE" />
		<result property="area1" column="AREA1" />
		<result property="area2" column="AREA2" />
		<result property="area3" column="AREA3" />
		<result property="area4" column="AREA4" />	
	</resultMap>
	
	
	<!-- insert 쿼리문 정의 -->
	
	<insert id="insertZIPCODE" parameterClass="zipcode">
		INSERT INTO ZIPCODE(
		ZIPCODE,
		AREA1,
		AREA2,
		AREA3,
		AREA4,
		)
		
		VALUES(
		#zipcode#,
		#area1#,
		#area2#,
		#area3#,
		#area4#
		)
	</insert>
	
	
	<!-- update 쿼리문 정의 -->
	
	<update id="updateZipcode" parameterClass="zipcode">
		UPDATE ZIPCODE SET ZIPCODE_PW=#password#,
						   AREA1=#area1#,
						   AREA2=#area2#,
						   AREA3=#area3#,
						   AREA4=#area4#,
							   
		<include refid="where-no"/>
	</update>
	
	
	<!-- delete 쿼리문 정의 -->
	
	<delete id="deleteZipcode" parameterClass="zipcode">
		DELETE FROM ZIPCODE
		
		<include refid="where-no" />
	</delete>

	
</sqlMap>